{
	"name": "@evmts/packages",
	"version": "0.11.2",
	"private": true,
	"description": "Aggregation of all the packages",
	"keywords": [
		"solidity",
		"forge",
		"foundry",
		"sol",
		"typescript",
		"web3",
		"blockchain"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/evmts/evmts-monorepo.git",
		"directory": "bundler"
	},
	"license": "MIT",
	"contributors": [
		"Will Cory <willcory10@gmail.com>"
	],
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./index.mjs",
			"require": "./index.cjs",
			"types": "./index.d.ts",
			"default": "./index.cjs"
		}
	},
	"main": "index.cjs",
	"module": "index.mjs",
	"types": "index.d.ts",
	"files": [
		"dist",
		"types",
		"src"
	],
	"scripts": {
		"all": "bun run build && bun run format && bun run lint && bun run generate:docs",
		"build": "nx run-many --targets=build:dist,build:types --projects=@evmts/blockexplorer,@evmts/core,@evmts/effect,@evmts/vm,@evmts/revm,@evmts/schemas,@evmts/state",
		"build:dist": "nx run-many --targets=build:dist --projects=@evmts/blockexplorer,@evmts/core,@evmts/effect,@evmts/vm,@evmts/revm,@evmts/schemas,@evmts/state",
		"build:types": "nx run-many --targets=build:types --projects=@evmts/blockexplorer,@evmts/core,@evmts/effect,@evmts/vm,@evmts/revm,@evmts/schemas,@evmts/state",
		"clean": "rm -rf node_modules && nx run-many --targets=clean --projects=@evmts/blockexplorer,@evmts/core,@evmts/effect,@evmts/vm,@evmts/revm,@evmts/schemas,@evmts/state",
		"format": "nx run-many --targets=format --projects=@evmts/blockexplorer,@evmts/core,@evmts/effect,@evmts/vm,@evmts/revm,@evmts/schemas,@evmts/state",
		"format:check": "nx run-many --targets=format:check --projects=@evmts/blockexplorer,@evmts/core,@evmts/effect,@evmts/vm,@evmts/revm,@evmts/schemas,@evmts/state",
		"test:run": "nx run-many --targets=test:run --projects=@evmts/blockexplorer,@evmts/core,@evmts/effect,@evmts/vm,@evmts/revm,@evmts/schemas,@evmts/state",
		"test:coverage": "nx run-many --targets=test:coverage --projects=@evmts/blockexplorer,@evmts/core,@evmts/effect,@evmts/vm,@evmts/revm,@evmts/schemas,@evmts/state",
		"generate:docs": "bun run typedoc",
		"lint": "rome check ./src --apply-unsafe",
		"lint:check": "rome check ./src --verbose"
	},
	"dependencies": {
		"@evmts/bun": "file:./blockexplorer",
		"@evmts/config": "file:./core",
		"@evmts/esbuild": "file:./effect",
		"@evmts/rollup": "file:./vm",
		"@evmts/rspack": "file:./revm",
		"@evmts/ts-plugin": "file:./schemas",
		"@evmts/vite": "file:./state"
	},
	"devDependencies": {
		"rome": "^12.1.3",
		"tsup": "^7.2.0",
		"typedoc": "^0.25.3",
		"typedoc-plugin-markdown": "^3.16.0",
		"typescript": "^5.2.2"
	},
	"peerDependencies": {
		"solc": ">0.8.10"
	},
	"publishConfig": {
		"access": "public"
	}
}
