{
	"name": "@tevm/tsupconfig",
	"version": "1.0.0-next.28",
	"private": false,
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./types/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "types/index.d.ts",
	"files": [
		"src",
		"dist",
		"types"
	],
	"scripts": {
		"all": "bun run build && bun run format && bun run lint && bun run test:run && bun run generate:docs && bun lint:deps && bun lint:package",
		"build": "nx build:dist && nx build:types",
		"build:dist": "bunx tsup",
		"build:types": "bunx tsup --dts-only && bunx tsc --emitDeclarationOnly --declaration",
		"clean": "rm -rf node_modules && rm -rf artifacts && rm -rf dist && rm -rf cache",
		"format": "bunx rome format . --write",
		"format:check": "bunx rome format .",
		"generate:docs": "bunx typedoc --plugin typedoc-plugin-markdown",
		"lint": "bunx rome check . --apply-unsafe",
		"lint:check": "bunx rome check . --verbose",
		"lint:deps": "bunx depcheck",
		"lint:package": "bunx publint --strict && bunx attw --pack",
		"test:run": "bunx tsup --dts-only"
	},
	"dependencies": {
		"@tevm/tsconfig": "workspace:^",
		"@types/node": "^20.10.6"
	}
}
