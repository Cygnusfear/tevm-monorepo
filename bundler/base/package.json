{
	"name": "@tevm/base",
	"version": "1.0.0-next.18",
	"private": false,
	"description": "Internal bundler for Tevm",
	"keywords": [
		"solidity",
		"forge",
		"foundry",
		"sol",
		"typescript",
		"web3",
		"blockchain"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/evmts/tevm-monorepo.git",
		"directory": "bundler/base"
	},
	"license": "MIT",
	"contributors": [
		"Will Cory <willcory10@gmail.com>"
	],
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./src/index.js",
			"require": "./dist/index.cjs",
			"types": "./types/src/index.d.ts",
			"default": "./dist/index.cjs"
		}
	},
	"main": "dist/index.cjs",
	"module": "src/index.js",
	"types": "types/src/index.d.ts",
	"files": [
		"dist",
		"types",
		"src"
	],
	"scripts": {
		"all": "bun run build && bun run test && bun run lint && bun run format && bun run format:docs",
		"build": "nx run-many --targets=build:dist,build:types --projects=@tevm/base ",
		"build:dist": "bun run tsup",
		"build:types": "bun run tsc --emitDeclarationOnly --declaration --declarationMap",
		"clean": "rm -rf node_modules && rm -rf artifacts && rm -rf dist && rm -rf cache",
		"format": "rome format . --write",
		"format:check": "rome format .",
		"generate:docs": "bun run typedoc --plugin typedoc-plugin-markdown",
		"lint": "rome check . --apply-unsafe",
		"lint:check": "rome check . --verbose",
		"test": "vitest --coverage",
		"test:coverage": "vitest run --coverage",
		"test:run": "vitest run",
		"test:ui": "vitest --ui"
	},
	"dependencies": {
		"@tevm/config": "workspace:^",
		"@tevm/runtime": "workspace:^",
		"@tevm/solc": "workspace:^",
		"@tevm/tsconfig": "workspace:^",
		"@types/node": "^20.10.4",
		"@types/resolve": "^1.20.6",
		"effect": "2.0.0-next.54",
		"glob": "^10.3.10",
		"resolve": "^1.22.8",
		"solidity-ast": "^0.4.55",
		"unplugin": "^1.5.1"
	},
	"devDependencies": {
		"@tevm/contract": "workspace:^",
		"@vitest/coverage-v8": "^1.0.3",
		"@vitest/ui": "^1.0.3",
		"abitype": "^0.10.3",
		"rome": "^12.1.3",
		"solc": "0.8.23-fixed",
		"tsup": "^8.0.1",
		"typedoc": "^0.25.4",
		"typedoc-plugin-markdown": "^3.17.1",
		"typescript": "^5.3.3",
		"vitest": "^1.0.3",
		"wagmi": "^1.4.10",
		"zod": "^3.22.4"
	},
	"publishConfig": {
		"access": "public"
	}
}
